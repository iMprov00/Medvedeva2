                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript для выделения активного пункта в выпадающем меню -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Получаем текущий URL
            const currentUrl = window.location.pathname + window.location.hash;
            
            // Находим все пункты меню
            const menuItems = document.querySelectorAll('.dropdown-item');
            
            // Убираем активный класс у всех пунктов
            menuItems.forEach(item => {
                item.classList.remove('active');
            });
            
            // Проверяем, есть ли якорь в URL
            if (window.location.hash) {
                const hash = window.location.hash;
                
                // Находим соответствующий пункт меню
                menuItems.forEach(item => {
                    if (item.getAttribute('href') === hash || 
                        item.getAttribute('href') === '/about' + hash) {
                        item.classList.add('active');
                    }
                });
            }
            
            // Также проверяем для основного пункта "О нас"
            if (currentUrl === '/about' || currentUrl === '/about#') {
                const aboutItem = document.querySelector('.dropdown-item[href="/about"]');
                if (aboutItem) {
                    aboutItem.classList.add('active');
                }
            }
        });
    </script>

</body>
