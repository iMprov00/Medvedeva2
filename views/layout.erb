    <style>
        :root {
            --bs-primary: #77e0b2;
            --bs-secondary: #e5a7ff;
            --bs-primary-rgb: 126, 255, 205;
            --bs-secondary-rgb: 229, 167, 255;
        }
        
        .btn-primary {
            background-color: var(--bs-secondary);
            border-color: var(--bs-secondary);
            color: white;
        }
        
        .btn-primary:hover {
            background-color: #d18cff;
            border-color: #d18cff;
        }
        
        .btn-outline-primary {
            color: var(--bs-secondary);
            border-color: var(--bs-secondary);
        }
        
        .btn-outline-primary:hover {
            background-color: var(--bs-secondary);
            border-color: var(--bs-secondary);
        }
        
        .text-primary {
            color: var(--bs-secondary) !important;
        }
        
        .border-primary {
            border-color: var(--bs-secondary) !important;
        }
        
        .bg-primary {
            background-color: var(--bs-primary) !important;
        }
        
        .bg-secondary-light {
            background-color: rgba(229, 167, 255, 0.08) !important;
        }
        
        .text-accent {
            color: var(--bs-primary) !important;
        }
        
        .bg-accent-light {
            background-color: rgba(126, 255, 205, 0.1) !important;
        }
        
        body {
            font-family: 'Inter', sans-serif;
        }
        
        /* Плавный скролл для якорей */
        html {
            scroll-behavior: smooth;
        }
        
        /* Стили для выпадающего меню */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 10px 0;
            margin-top: 10px;
            min-width: 200px;
        }
        
        .dropdown-item {
            padding: 10px 20px;
            font-weight: 500;
            transition: all 0.2s;
            color: #333;
        }
        
        .dropdown-item:hover {
            background-color: rgba(229, 167, 255, 0.1);
            color: #e5a7ff;
            padding-left: 25px;
        }
        
        .dropdown-item.active {
            background-color: rgba(229, 167, 255, 0.15);
            color: #e5a7ff;
        }
        
        .dropdown-divider {
            margin: 5px 0;
        }
        
        /* Стили для навигации на мобильных */
        @media (max-width: 991.98px) {
            .dropdown-menu {
                box-shadow: none;
                border-radius: 0;
                border: none;
                padding-left: 15px;
