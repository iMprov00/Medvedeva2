    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Активное меню
            const currentUrl = window.location.pathname + window.location.hash;
            const menuItems = document.querySelectorAll('.dropdown-item');
            
            menuItems.forEach(item => {
                item.classList.remove('active');
            });
            
            if (window.location.hash) {
                const hash = window.location.hash;
                menuItems.forEach(item => {
                    if (item.getAttribute('href') === hash || 
                        item.getAttribute('href') === '/about' + hash) {
                        item.classList.add('active');
                    }
                });
            }
            
            if (currentUrl === '/about' || currentUrl === '/about#') {
                const aboutItem = document.querySelector('.dropdown-item[href="/about"]');
                if (aboutItem) {
                    aboutItem.classList.add('active');
                }
            }
            
            // Фикс для iOS
            if (/iPad|iPhone|iPod/.test(navigator.userAgent)) {
                document.addEventListener('focus', function(e) {
                    if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA' || e.target.tagName === 'SELECT') {
                        document.body.style.fontSize = '16px';
                    }
                }, true);
                
                document.addEventListener('blur', function(e) {
                    document.body.style.fontSize = '';
                }, true);
            }
            
            // Клонирование виджета для мобильной версии
            setTimeout(function() {
                const desktopWidget = document.querySelector('#medflexMedtochkaWidgetButton');
                const mobileContainer = document.querySelector('#medflexMedtochkaWidgetButtonMobile');
                
                if (desktopWidget && mobileContainer && desktopWidget.querySelector('button') && !mobileContainer.querySelector('button')) {
                    // Клонируем кнопку из десктопной версии
                    const desktopButton = desktopWidget.querySelector('button');
                    if (desktopButton) {
                        const clonedButton = desktopButton.cloneNode(true);
                        mobileContainer.appendChild(clonedButton);
                        
                        // Обновляем стили для мобильной версии
                        clonedButton.style.width = '100%';
                        clonedButton.style.justifyContent = 'center';
                        clonedButton.style.margin = '0';
                        
                        // Добавляем обработчик на случай, если виджет не работает
                        clonedButton.addEventListener('click', function(e) {
                            if (!window.MedFlexWidget) {
                                e.preventDefault();
                                window.open('https://booking.medflex.ru/?user=83de76a588b26ad9b729c20d4b1ffbf6', '_blank');
                            }
                        });
                    }
                }
                
                // Резервная кнопка если виджет не загрузился
                if (!window.MedFlexWidget) {
                    console.warn('MedFlex widget not loaded, creating fallback buttons');
                    
                    [desktopWidget, mobileContainer].forEach(container => {
                        if (container && !container.querySelector('button')) {
                            const fallbackButton = document.createElement('button');
                            fallbackButton.className = 'btn btn-primary btn-sm px-3 touch-target';
                            fallbackButton.innerHTML = '<i class="bi bi-person-circle me-1"></i>Личный кабинет';
                            fallbackButton.onclick = function() {
                                window.open('https://booking.medflex.ru/?user=83de76a588b26ad9b729c20d4b1ffbf6', '_blank');
                            };
                            container.appendChild(fallbackButton);
                        }
                    });
                }
            }, 2000); // Ждем загрузки виджета
        });
        
        // Фикс для высоты на мобильных
        function setVH() {
            let vh = window.innerHeight * 0.01;
            document.documentElement.style.setProperty('--vh', `${vh}px`);
        }
        
        setVH();
        window.addEventListener('resize', setVH);
        window.addEventListener('orientationchange', setVH);
        
        // Lazy loading
        if ('IntersectionObserver' in window) {
            const lazyImages = document.querySelectorAll('img[loading="lazy"]');
            const imageObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        img.src = img.dataset.src || img.src;
                        img.classList.add('loaded');
                        imageObserver.unobserve(img);
                    }
                });
            }, {
                rootMargin: '50px 0px',
                threshold: 0.1
            });
            
            lazyImages.forEach(img => imageObserver.observe(img));
        }
    </script>

