<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('serviceSearchInput');
    const categorySelect = document.getElementById('serviceCategorySelect');
    const serviceRows = document.querySelectorAll('.service-row');
    const categorySections = document.querySelectorAll('.category-section');
    const categoryContents = document.querySelectorAll('.category-content');
    const noResultsMessage = document.getElementById('noResultsMessage');
    const clearSearchBtn = document.getElementById('clearSearchBtn');
    const servicesCount = document.getElementById('servicesCount');

    // Инициализация тултипов для кодов услуг
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });

    // Добавляем функциональность раскрытия/скрытия категорий
    document.querySelectorAll('.category-header').forEach(header => {
        header.addEventListener('click', function() {
            const targetId = this.querySelector('[data-bs-target]').getAttribute('data-bs-target');
            const target = document.querySelector(targetId);
            const icon = this.querySelector('.bi-chevron-down');
            
            if (target.classList.contains('show')) {
                icon.classList.remove('bi-chevron-down');
                icon.classList.add('bi-chevron-up');
            } else {
                icon.classList.remove('bi-chevron-up');
                icon.classList.add('bi-chevron-down');
            }
        });
    });

    // Функция поиска
    function performSearch() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const selectedCategory = categorySelect.value;
        let visibleCount = 0;
        let visibleCategories = 0;

        // Сначала скрываем все строки
        serviceRows.forEach(row => {
            row.style.display = 'none';
            row.classList.remove('d-flex');
        });

        // Сначала скрываем все категории
        categorySections.forEach(section => {
            section.style.display = 'none';
        });

        // Фильтрация
        serviceRows.forEach(row => {
            const name = row.getAttribute('data-name');
            const description = row.getAttribute('data-description');
            const code = row.getAttribute('data-code');
            const category = row.getAttribute('data-category');
            
            // Проверяем совпадение по разным полям
            const matchesSearch = !searchTerm || 
                                 name.includes(searchTerm) || 
                                 description.includes(searchTerm) ||
                                 code.includes(searchTerm);
            const matchesCategory = !selectedCategory || category === selectedCategory;

            if (matchesSearch && matchesCategory) {
                row.style.display = '';
                visibleCount++;
                
                // Показываем родительскую категорию
                const categorySection = row.closest('.category-section');
                if (categorySection) {
                    categorySection.style.display = 'block';
                }
            }
        });

        // Обновляем счетчик
        servicesCount.textContent = visibleCount;

        // Показываем/скрываем сообщение об отсутствии результатов
        if (visibleCount === 0) {
            noResultsMessage.classList.remove('d-none');
        } else {
            noResultsMessage.classList.add('d-none');
        }

        // Подсчитываем видимые категории
        categorySections.forEach(section => {
            const visibleRows = section.querySelectorAll('.service-row[style=""]');
            if (visibleRows.length > 0) {
                visibleCategories++;
                // Раскрываем категорию если есть видимые строки
                const content = section.querySelector('.category-content');
                if (content) {
                    content.classList.add('show');
                    const icon = section.querySelector('.bi-chevron-down');
                    if (icon) {
                        icon.classList.remove('bi-chevron-down');
                        icon.classList.add('bi-chevron-up');
                    }
                }
            } else {
                // Скрываем категорию если нет видимых строк
                const content = section.querySelector('.category-content');
                if (content) {
                    content.classList.remove('show');
                    const icon = section.querySelector('.bi-chevron-down');
                    if (icon) {
                        icon.classList.remove('bi-chevron-up');
                        icon.classList.add('bi-chevron-down');
                    }
                }
            }
        });

        // Если выбрана категория, показываем только её
        if (selectedCategory) {
            categorySections.forEach(section => {
                const sectionId = section.getAttribute('data-category-id');
                const visibleRows = section.querySelectorAll('.service-row[style=""]');
                
                if (sectionId === selectedCategory && visibleRows.length > 0) {
                    section.style.display = 'block';
                } else {
                    section.style.display = 'none';
                }
            });
        }
        
        // Обновляем тултипы после фильтрации
        updateTooltips();
    }

    // Функция обновления тултипов
    function updateTooltips() {
        // Уничтожаем старые тултипы
        tooltipList.forEach(tooltip => {
            tooltip.dispose();
        });
        
        // Инициализируем новые тултипы только для видимых элементов
        const visibleTooltips = [].slice.call(document.querySelectorAll('.service-row[style=""] [data-bs-toggle="tooltip"]'));
        visibleTooltips.forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    }

    // События
    searchInput.addEventListener('input', performSearch);
    categorySelect.addEventListener('change', performSearch);

    // Кнопка сброса поиска
    clearSearchBtn.addEventListener('click', function() {
        searchInput.value = '';
        categorySelect.value = '';
        // Раскрываем все категории при сбросе
        categoryContents.forEach(content => {
            content.classList.add('show');
        });
        performSearch();
    });

    // Сохраняем оригинальный счетчик
    const originalCount = servicesCount.textContent;
    
    // Копирование кода услуги при клике
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('service-code')) {
            const code = e.target.textContent.trim();
            
            // Используем современный Clipboard API
            navigator.clipboard.writeText(code).then(() => {
                // Показываем временное сообщение об успехе
                const originalTitle = e.target.getAttribute('title');
                e.target.setAttribute('title', 'Скопировано!');
                
                // Обновляем тултип
                const tooltipInstance = bootstrap.Tooltip.getInstance(e.target);
                if (tooltipInstance) {
                    tooltipInstance.setContent({'.tooltip-inner': 'Скопировано!'});
                }
                
                // Визуальная обратная связь
                e.target.style.backgroundColor = 'var(--bs-primary)';
                e.target.style.color = 'white';
                
                // Возвращаем оригинальный вид через 2 секунды
                setTimeout(() => {
                    e.target.setAttribute('title', originalTitle || `Код услуги: ${code}`);
                    e.target.style.backgroundColor = '';
                    e.target.style.color = '';
                    if (tooltipInstance) {
                        tooltipInstance.setContent({'.tooltip-inner': originalTitle || `Код услуги: ${code}`});
                    }
                }, 2000);
            }).catch(err => {
                console.error('Ошибка копирования: ', err);
                
                // Альтернативный способ для старых браузеров
                const textArea = document.createElement('textarea');
                textArea.value = code;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    
                    const originalTitle = e.target.getAttribute('title');
                    e.target.setAttribute('title', 'Скопировано!');
                    
                    setTimeout(() => {
                        e.target.setAttribute('title', originalTitle || `Код услуги: ${code}`);
                    }, 2000);
                } catch (err) {
                    console.error('Не удалось скопировать текст: ', err);
                }
                document.body.removeChild(textArea);
            });
        }
    });
});
</script>