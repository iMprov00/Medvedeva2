<!-- Поиск и фильтры -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3"><i class="bi bi-search me-2"></i>Поиск услуг</h5>
                        <form id="serviceSearchForm">
                            <div class="row g-3">
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <span class="input-group-text bg-transparent border-end-0">
                                            <i class="bi bi-search text-muted"></i>
                                        </span>
                                        <input type="text" 
                                               class="form-control border-start-0" 
                                               id="serviceSearchInput" 
                                               placeholder="Найти услугу по названию, описанию или коду...">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <select class="form-select" id="serviceCategorySelect">
                                        <option value="">Все категории</option>
                                        <% @service_categories.each do |category| %>
                                            <option value="<%= category.id %>"><%= category.name %></option>
                                        <% end %>
                                    </select>
                                </div>
                            </div>
                        </form>
                        <div class="mt-3 text-end">
                            <small class="text-muted">
                                <span id="servicesCount"><%= Service.count %></span> услуг
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Результаты поиска -->
        <div id="searchResults" class="row">
            <% if @service_categories.empty? %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-clipboard-x display-1 text-muted mb-3"></i>
                        <h4 class="fw-bold mb-3">Услуги временно недоступны</h4>
                        <p class="text-muted">Мы обновляем прейскурант. Пожалуйста, проверьте позже или свяжитесь с нами.</p>
                        <a href="/contacts" class="btn btn-primary mt-3">
                            <i class="bi bi-telephone me-2"></i>Связаться с клиникой
                        </a>
                    </div>
                </div>
            <% else %>
                <!-- Категории услуг -->
                <% @service_categories.each do |category| %>
                    <% unless category.services.empty? %>
                        <div class="col-12">
                            <div class="category-section mb-4" data-category-id="<%= category.id %>">
                                <!-- Компактный заголовок категории -->
                                <div class="category-header border-bottom pb-2 mb-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <h3 class="h4 fw-bold mb-0 text-primary">
                                                <i class="bi bi-folder me-2"></i><%= category.name %>
                                            </h3>
                                            <small class="text-muted">
                                                <%= category.services.count %> 
                                                <%= russian_plural(category.services.count, 'услуга', 'услуги', 'услуг') %>
                                            </small>
                                        </div>
                                        <div class="category-actions">
                                            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" 
                                                    data-bs-target="#category-<%= category.id %>" aria-expanded="true">
                                                <i class="bi bi-chevron-down"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Таблица услуг -->
                                <div class="category-content collapse show" id="category-<%= category.id %>">
                                    <div class="table-responsive">
                                        <table class="table table-borderless table-hover mb-0">
                                            <thead class="bg-light">
                                                <tr>
                                                    <th width="10%" class="text-center ps-3">Код</th>
                                                    <th width="40%">Услуга</th>
                                                    <th width="15%" class="text-center">Длительность</th>
                                                    <th width="15%" class="text-end pe-3">Цена</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% category.services.each do |service| %>
                                                    <% if service.active != false %>
                                                        <tr class="service-row border-top" 
                                                            data-name="<%= service.name.downcase %>"
                                                            data-description="<%= service.description.to_s.downcase %>"
                                                            data-code="<%= service.service_code.to_s.downcase %>"
                                                            data-category="<%= category.id %>">
                                                            <td class="text-center ps-3">
                                                                <% if service.service_code.present? %>
                                                                    <span class="badge bg-light text-dark border rounded-pill px-3 py-1 service-code" 
                                                                          title="Код услуги: <%= service.service_code %>"
                                                                          data-bs-toggle="tooltip" 
                                                                          data-bs-placement="top">
                                                                        <%= service.service_code %>
                                                                    </span>
                                                                <% else %>
                                                                    <span class="text-muted fst-italic" title="Код не указан">—</span>
                                                                <% end %>
                                                            </td>
                                                            <td>
                                                                <div class="fw-semibold text-dark">
                                                                    <%= service.name %>
                                                                </div>
                                                                <% if service.description.present? %>
                                                                    <div class="text-muted small mt-1">
                                                                        <%= service.description.truncate(60) %>
                                                                    </div>
                                                                <% end %>
                                                            </td>
                                                            <td class="text-center">
                                                                <% if service.duration_minutes.present? %>
                                                                    <span class="text-dark">
                                                                        <%= service.duration_minutes %> мин.
                                                                    </span>
                                                                <% else %>
                                                                    <span class="text-muted">—</span>
                                                                <% end %>
                                                            </td>
                                                            <td class="text-end fw-bold text-primary pe-3">
                                                                <%= number_to_currency(service.price) %>
                                                            </td>
                                                        </tr>
                                                    <% end %>
                                                <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>

        <!-- Сообщение о пустом поиске -->
        <div id="noResultsMessage" class="text-center py-5 d-none">
            <i class="bi bi-search display-1 text-muted mb-3"></i>
            <h4 class="fw-bold mb-3">Услуги не найдены</h4>
            <p class="text-muted">Попробуйте изменить условия поиска</p>
            <button id="clearSearchBtn" class="btn btn-outline-primary mt-3">
                <i class="bi bi-arrow-clockwise me-2"></i>Сбросить поиск
            </button>
        </div>
    </div>
</section>

