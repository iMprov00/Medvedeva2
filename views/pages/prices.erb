<!-- Заголовок страницы -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-3">Услуги и цены</h1>
                <p class="lead text-muted mb-0">Полный перечень медицинских услуг и их стоимость</p>
            </div>
        </div>
    </div>
</section>

<!-- Поиск и фильтры -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-5">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4"><i class="bi bi-search me-2"></i>Поиск услуг</h5>
                        <form id="serviceSearchForm">
                            <div class="row g-3">
                                <div class="col-md-8">
                                    <div class="input-group">
                                        <span class="input-group-text bg-transparent border-end-0">
                                            <i class="bi bi-search text-muted"></i>
                                        </span>
                                        <input type="text" 
                                               class="form-control border-start-0" 
                                               id="serviceSearchInput" 
                                               placeholder="Найти услугу по названию, описанию или коду...">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <select class="form-select" id="serviceCategorySelect">
                                        <option value="">Все категории</option>
                                        <% @service_categories.each do |category| %>
                                            <option value="<%= category.id %>"><%= category.name %></option>
                                        <% end %>
                                    </select>
                                </div>
                            </div>
                        </form>
                        <div class="mt-3 text-end">
                            <small class="text-muted">
                                <span id="servicesCount"><%= Service.count %></span> услуг
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Результаты поиска -->
        <div id="searchResults" class="row">
            <% if @service_categories.empty? %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-clipboard-x display-1 text-muted mb-3"></i>
                        <h4 class="fw-bold mb-3">Услуги временно недоступны</h4>
                        <p class="text-muted">Мы обновляем прейскурант. Пожалуйста, проверьте позже или свяжитесь с нами.</p>
                        <a href="/contacts" class="btn btn-primary mt-3">
                            <i class="bi bi-telephone me-2"></i>Связаться с клиникой
                        </a>
                    </div>
                </div>
            <% else %>
                <!-- Категории услуг -->
                <% @service_categories.each do |category| %>
                    <% unless category.services.empty? %>
                        <div class="col-12 mb-5">
                            <div class="category-section" data-category-id="<%= category.id %>">
                                <div class="d-flex align-items-center mb-4">
                                    <div class="icon-wrapper icon-wrapper-primary me-3">
                                        <i class="bi bi-folder fs-4"></i>
                                    </div>
                                    <div>
                                        <h2 class="fw-bold mb-1"><%= category.name %></h2>
                                        <p class="text-muted mb-0">
                                            <%= category.services.count %> 
                                            <%= russian_plural(category.services.count, 'услуга', 'услуги', 'услуг') %>
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle">
                                        <thead class="bg-secondary-light">
                                            <tr>
                                                <th width="10%" class="text-center">Код</th>
                                                <th width="35%">Услуга</th>
                                                <th width="35%">Описание</th>
                                                <th width="10%" class="text-center">Длительность</th>
                                                <th width="10%" class="text-end">Цена</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% category.services.each do |service| %>
                                                <% if service.active != false %> <!-- Показываем только активные услуги -->
                                                    <tr class="service-row" 
                                                        data-name="<%= service.name.downcase %>"
                                                        data-description="<%= service.description.to_s.downcase %>"
                                                        data-code="<%= service.service_code.to_s.downcase %>"
                                                        data-category="<%= category.id %>">
                                                        <td class="text-center">
                                                            <% if service.service_code.present? %>
                                                                <div class="service-code-container">
                                                                    <span class="service-code" 
                                                                          title="Код услуги: <%= service.service_code %>"
                                                                          data-bs-toggle="tooltip" 
                                                                          data-bs-placement="top">
                                                                        <%= service.service_code %>
                                                                    </span>
                                                                </div>
                                                            <% else %>
                                                                <span class="text-muted fst-italic" title="Код не указан">—</span>
                                                            <% end %>
                                                        </td>
                                                        <td>
                                                            <div class="fw-bold text-primary">
                                                                <%= service.name %>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <% if service.description.present? %>
                                                                <div class="text-muted small">
                                                                    <%= service.description %>
                                                                </div>
                                                            <% else %>
                                                                <span class="text-muted fst-italic">Описание отсутствует</span>
                                                            <% end %>
                                                        </td>
                                                        <td class="text-center">
                                                            <% if service.duration_minutes.present? %>
                                                                <span class="badge bg-accent-light text-dark">
                                                                    <%= service.duration_minutes %> мин.
                                                                </span>
                                                            <% else %>
                                                                <span class="text-muted">—</span>
                                                            <% end %>
                                                        </td>
                                                        <td class="text-end fw-bold">
                                                            <%= number_to_currency(service.price) %>
                                                        </td>
                                                    </tr>
                                                <% end %>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>

        <!-- Сообщение о пустом поиске -->
        <div id="noResultsMessage" class="text-center py-5 d-none">
            <i class="bi bi-search display-1 text-muted mb-3"></i>
            <h4 class="fw-bold mb-3">Услуги не найдены</h4>
            <p class="text-muted">Попробуйте изменить условия поиска</p>
            <button id="clearSearchBtn" class="btn btn-outline-primary mt-3">
                <i class="bi bi-arrow-clockwise me-2"></i>Сбросить поиск
            </button>
        </div>
    </div>
</section>

