<!-- Заголовок страницы -->
<section class="py-4 py-lg-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto text-center">
                <h1 class="fw-bold mb-3 fade-in-up" style="font-size: clamp(1.75rem, 4vw, 2.5rem);">Документы</h1>
                <p class="lead text-muted mb-0 fade-in-up" style="animation-delay: 0.1s; font-size: clamp(1rem, 2vw, 1.25rem);">
                    Лицензии, сертификаты и разрешительная документация клиники
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Документы -->
<section class="py-4 py-lg-5">
    <div class="container">
        <div class="row g-3 g-lg-4">
            <!-- Основные документы -->
            <div class="col-12 col-lg-8">
                <div class="row g-3">
                    <% if @documents && @documents.any? %>
                        <% @documents.each_with_index do |doc, index| %>
                            <div class="col-12 col-md-6 fade-in-up" style="animation-delay: <%= 0.2 + index * 0.1 %>s">
                                <div class="card border-0 shadow-sm h-100 card-hover">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-start gap-3 mb-3">
                                            <div class="icon-wrapper icon-wrapper-<%= doc.icon_color %> flex-shrink-0">
                                                <i class="bi <%= doc.icon %> fs-4"></i>
                                            </div>
                                            <div>
                                                <h5 class="fw-bold mb-2 fs-6"><%= doc.title %></h5>
                                                <% if doc.description && !doc.description.empty? %>
                                                    <p class="text-muted mb-2 small"><%= doc.description %></p>
                                                <% end %>
                                                <div class="d-flex gap-2">
                                                    <a href="/download/document/<%= doc.id %>" class="btn btn-outline-primary btn-sm touch-target" download="<%= doc.download_filename %>">
                                                        <i class="bi bi-download me-1"></i>Скачать
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    <% else %>
                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body p-4 text-center text-muted">
                                    <i class="bi bi-file-earmark display-4 mb-3 d-block"></i>
                                    <p class="mb-0">Документы будут добавлены в ближайшее время</p>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
            
            <!-- Информация -->
            <div class="col-12 col-lg-4 fade-in-up" style="animation-delay: 0.6s">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-3">
                        <h5 class="fw-bold mb-3 fs-6">Информация о документах</h5>
                        <p class="text-muted small mb-4">
                            Все документы клиники соответствуют требованиям законодательства РФ 
                            и регулярно обновляются в соответствии с изменениями в нормативных актах.
                        </p>
                        
                        <div class="list-group list-group-flush mb-4">
                            <div class="list-group-item px-0 border-0 py-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-primary me-2"></i>
                                    <span class="small">Все лицензии действительны</span>
                                </div>
                            </div>
                            <div class="list-group-item px-0 border-0 py-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-primary me-2"></i>
                                    <span class="small">Документы обновляются ежегодно</span>
                                </div>
                            </div>
                            <div class="list-group-item px-0 border-0 py-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-primary me-2"></i>
                                    <span class="small">Доступны для ознакомления</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <a href="/contacts" class="btn btn-primary w-100 touch-target">
                                <i class="bi bi-question-circle me-2"></i>Задать вопрос
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
/* CSS для чередования цветов и анимаций */
.fade-in-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.5s ease forwards;
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Адаптивность */
@media (max-width: 768px) {
    .fade-in-up {
        animation: fadeInUp 0.4s ease forwards;
    }
    
    .card-hover:hover {
        transform: none;
    }
}

/* Стили для карточек документов */
.card-hover {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card-hover:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
}

/* Touch улучшения */
@media (hover: none) and (pointer: coarse) {
    .card-hover:hover {
        transform: none;
    }
}

/* Улучшенные кнопки для мобильных */
.btn-sm {
    min-height: 36px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

/* Компактные карточки на мобильных */
@media (max-width: 576px) {
    .card-body {
        padding: 1rem !important;
    }
    
    .d-flex.gap-2 {
        gap: 0.5rem !important;
    }
}
</style>
