                <div class="position-relative">
                    <div class="rounded-3 rounded-lg-4 overflow-hidden shadow">
                        <img src="/images/medvedeva3.jpeg" 
                             class="img-fluid object-fit-cover w-100" 
                             alt="Доктор Медведева, основатель клиники"
                             loading="lazy">
                    </div>
                </div>
            </div>
