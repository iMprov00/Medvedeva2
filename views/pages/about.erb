<!-- Фотогалерея клиники -->

<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-6 fw-bold mb-3">Наша клиника изнутри</h2>
            <p class="text-muted lead">Современные кабинеты, оборудование и уютная атмосфера</p>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <!-- Карусель Bootstrap -->
                <div id="clinicCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
                    
                    <!-- Индикаторы (точки внизу) -->
                    <% if @gallery_images.any? %>
                    <div class="carousel-indicators">
                        <% @gallery_images.each_with_index do |_, index| %>
                        <button type="button" 
                                data-bs-target="#clinicCarousel" 
                                data-bs-slide-to="<%= index %>" 
                                class="<%= 'active' if index == 0 %>"
                                aria-current="<%= 'true' if index == 0 %>"
                                aria-label="Slide <%= index + 1 %>"></button>
                        <% end %>
                    </div>
                    <% end %>
                    
                    <!-- Слайды -->
                    <div class="carousel-inner rounded-4 shadow-lg overflow-hidden">
                        <% if @gallery_images.any? %>
                            <% @gallery_images.each_with_index do |image, index| %>
                            <div class="carousel-item <%= 'active' if index == 0 %>">
                                <div class="gallery-image-container">
                                    <img src="/images/about/<%= image %>" 
                                         class="d-block w-100" 
                                         alt="Клиника доктора Медведевой - фото <%= index + 1 %>">
                                </div>
                            </div>
                            <% end %>
                        <% else %>
                            <!-- Заглушка, если фотографий нет -->
                            <div class="carousel-item active">
                                <div class="gallery-image-container bg-secondary-light d-flex align-items-center justify-content-center">
                                    <div class="text-center p-5">
                                        <i class="bi bi-images display-1 text-muted"></i>
                                        <p class="mt-3 text-muted">Фотографии клиники скоро будут добавлены</p>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    
                    <!-- Кнопки навигации (влево/вправо) -->
                    <% if @gallery_images.any? %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#clinicCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Предыдущий</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#clinicCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Следующий</span>
                    </button>
                    <% end %>
                </div>
                
            </div>
        </div>
    </div>
</section>

