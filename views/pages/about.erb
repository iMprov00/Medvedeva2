<script>
document.addEventListener('DOMContentLoaded', function() {
    // Функция для показа скрытых изображений
    function showMoreGallery() {
        const hiddenItems = document.querySelectorAll('#my-gallery .gallery-item.d-none');
        const showMoreBtn = document.getElementById('showMoreGallery');
        const showLessBtn = document.getElementById('showLessGallery');
        
        if (hiddenItems.length === 0) return;
        
        // Показываем все скрытые элементы
        hiddenItems.forEach((item, index) => {
            setTimeout(() => {
                item.classList.remove('d-none');
                item.classList.add('show-animation');
                item.style.animationDelay = `${0.1 + (index * 0.05)}s`;
            }, index * 50); // Небольшая задержка для эффекта каскада
        });
        
        // Прячем кнопку "Показать еще", показываем "Свернуть"
        if (showMoreBtn) showMoreBtn.classList.add('d-none');
        if (showLessBtn) showLessBtn.classList.remove('d-none');
        
        // Прокручиваем к последнему показанному элементу плавно
        setTimeout(() => {
            const lastItem = document.querySelector('#my-gallery .gallery-item:not(.d-none):last-child');
            if (lastItem) {
                lastItem.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'nearest'
                });
            }
        }, hiddenItems.length * 50 + 100);
    }
    
    // Функция для скрытия лишних изображений (после первых 8)
    function showLessGallery() {
        const allItems = document.querySelectorAll('#my-gallery .gallery-item');
        const showMoreBtn = document.getElementById('showMoreGallery');
        const showLessBtn = document.getElementById('showLessGallery');
        
        // Скрываем все элементы после 8-го
        allItems.forEach((item, index) => {
            if (index >= 8) {
                item.classList.remove('show-animation');
                item.classList.add('d-none');
            }
        });
        
        // Показываем кнопку "Показать еще", прячем "Свернуть"
        if (showMoreBtn) showMoreBtn.classList.remove('d-none');
        if (showLessBtn) showLessBtn.classList.add('d-none');
        
        // Прокручиваем к галерее
        const gallerySection = document.getElementById('gallery');
        if (gallerySection) {
            gallerySection.scrollIntoView({ 
                behavior: 'smooth', 
                block: 'start'
            });
        }
    }
    
    // Вешаем обработчики событий
    const showMoreBtn = document.getElementById('showMoreGallery');
    const showLessBtn = document.getElementById('showLessGallery');
    
    if (showMoreBtn) {
        showMoreBtn.addEventListener('click', showMoreGallery);
    }
    
    if (showLessBtn) {
        showLessBtn.addEventListener('click', showLessGallery);
    }
    
    // Адаптивная логика для разных размеров экрана
    function updateGalleryLayout() {
        const width = window.innerWidth;
        const galleryItems = document.querySelectorAll('#my-gallery .gallery-item');
        const showMoreBtn = document.getElementById('showMoreGallery');
        const showLessBtn = document.getElementById('showLessGallery');
        
        if (!showMoreBtn || galleryItems.length === 0) return;
        
        // На мобильных можно показывать меньше фото изначально
        const initialVisibleCount = width < 768 ? 6 : 8;
        
        // Скрываем лишние элементы
        galleryItems.forEach((item, index) => {
            const dataIndex = parseInt(item.getAttribute('data-index'));
            
            // Показываем только первые N элементов
            if (dataIndex < initialVisibleCount) {
                item.classList.remove('d-none');
            } else {
                // Если галерея уже раскрыта, не скрываем
                if (!showMoreBtn.classList.contains('d-none')) {
                    item.classList.add('d-none');
                }
            }
        });
        
        // Скрываем кнопку, если все фото видны или их меньше лимита
        if (galleryItems.length <= initialVisibleCount) {
            if (showMoreBtn) showMoreBtn.style.display = 'none';
            if (showLessBtn) showLessBtn.style.display = 'none';
        }
    }
    
    // Вызываем при загрузке и изменении размера окна
    updateGalleryLayout();
    window.addEventListener('resize', updateGalleryLayout);
    
    // Инициализация PhotoSwipe для галереи
    initGalleryPhotoSwipe();
});

/**
 * Инициализация PhotoSwipe для галереи
 * (только для раскрытой галереи, чтобы не грузить все изображения сразу)
 */
function initGalleryPhotoSwipe() {
    const galleryElement = document.getElementById('my-gallery');
    if (!galleryElement) return;
    
    // Находим все ссылки на изображения в галерее
    const galleryLinks = galleryElement.querySelectorAll('a[data-pswp-width]');
    
    // Инициализируем PhotoSwipe только когда это нужно
    let pswpInitialized = false;
    
    function initPSWP() {
        if (pswpInitialized) return;
        
        const lightbox = new PhotoSwipeLightbox({
            gallery: '#my-gallery',
            children: 'a[data-pswp-width]',
            pswpModule: PhotoSwipe,
            showHideAnimationType: 'zoom'
        });
        
        lightbox.init();
        pswpInitialized = true;
    }
    
    // Инициализируем при клике на любое изображение
    galleryLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            // Предотвращаем стандартное поведение только для PhotoSwipe
            if (this.hasAttribute('data-pswp-width')) {
                e.preventDefault();
                initPSWP();
                
                // Находим индекс этого изображения
                const allLinks = Array.from(galleryElement.querySelectorAll('a[data-pswp-width]'));
                const index = allLinks.indexOf(this);
                
                // Создаем новый экземпляр для открытия с правильным индексом
                if (typeof PhotoSwipeLightbox !== 'undefined') {
                    const tempLightbox = new PhotoSwipeLightbox({
                        gallery: '#my-gallery',
                        children: 'a[data-pswp-width]',
                        pswpModule: PhotoSwipe,
                        showHideAnimationType: 'zoom',
                        index: index
                    });
                    
                    tempLightbox.init();
                    tempLightbox.loadAndOpen(index);
                }
            }
        });
    });
}
