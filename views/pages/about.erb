<!-- Фотогалерея клиники -->
<section class="py-5" id="gallery">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-6 fw-bold mb-3">Наша клиника изнутри</h2>
            <p class="text-muted lead">Современные кабинеты, оборудование и уютная атмосфера</p>
        </div>
        
        <!-- Контейнер для галереи с сеткой Bootstrap -->
        <div class="row g-3" id="my-gallery">
            <% if @gallery_images.any? %>
                <% @gallery_images.each do |image| %>
                    <div class="col-6 col-md-4 col-lg-3">
                        <!-- ИЗМЕНЕНИЯ ЗДЕСЬ: убраны data-атрибуты и добавлен класс gallery-item -->
                        <a href="/images/about/<%= image %>" 
                           class="d-block gallery-item">
                            <img src="/images/about/<%= image %>" 
                                 class="img-fluid rounded-3 shadow-sm gallery-thumbnail" 
                                 alt="Клиника доктора Медведевой">
                        </a>
                    </div>
                <% end %>
            <% else %>
                <!-- Заглушка, если фотографий нет -->
                <div class="col-12 text-center">
                    <i class="bi bi-images display-1 text-muted"></i>
                    <p class="mt-3 text-muted">Фотографии клиники скоро будут добавлены</p>
                </div>
            <% end %>
        </div>
    </div>
</section>

<!-- Отзывы -->
<section class="py-5" id="reviews">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-6 fw-bold mb-3">Отзывы пациентов</h2>
            <p class="text-muted lead">Что говорят наши пациенты</p>
        </div>
        
        <!-- Контейнер для отзывов с прокруткой -->
        <div class="reviews-container mb-5" style="max-height: 500px; overflow-y: auto; padding-right: 15px;">
            <div class="row g-4" id="reviewsList">
                <!-- Отзывы будут загружены здесь динамически -->
                <div class="col-12 text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Загрузка отзывов...</span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Форма для нового отзыва -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-4">Оставьте свой отзыв</h4>
                <form id="newReviewForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="authorName" class="form-label">Ваше имя *</label>
                            <input type="text" class="form-control" id="authorName" name="author_name" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Оценка *</label>
                            <div class="rating-input">
                                <div class="stars">
                                    <i class="bi bi-star" data-rating="1"></i>
                                    <i class="bi bi-star" data-rating="2"></i>
                                    <i class="bi bi-star" data-rating="3"></i>
                                    <i class="bi bi-star" data-rating="4"></i>
                                    <i class="bi bi-star" data-rating="5"></i>
                                </div>
                                <input type="hidden" id="rating" name="rating" required>
                                <div class="rating-text mt-1 small text-muted">
                                    <span id="ratingText">Выберите оценку</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <label for="content" class="form-label">Текст отзыва *</label>
                            <textarea class="form-control" id="content" name="content" rows="4" required></textarea>
                        </div>
                        
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Отправить отзыв</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



