<!-- Заголовок страницы -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-3 fade-in-up">О нашей клинике</h1>
                <p class="lead text-muted mb-0 fade-in-up" style="animation-delay: 0.1s">Место, где здоровье ребенка строится на доказательствах, а забота — на доверии</p>
            </div>
        </div>
    </div>
</section>

<!-- Философия -->
