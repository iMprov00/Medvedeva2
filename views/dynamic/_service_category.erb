<div class="service-category" id="category-<%= category.id %>">
    <h2 class="category-title fs-4 fs-md-3 fw-bold mb-3 mb-md-4">
        <%= category.name %>
    </h2>
    
    <div class="category-services">
        <% if category.services.empty? %>
            <p class="no-services text-muted text-center py-4 fs-6">Услуги в этой категории пока не добавлены.</p>
        <% else %>
            <div class="row g-3">
                <% category.services.each do |service| %>
                    <div class="col-12">
                        <%= erb :'dynamic/_service', locals: { service: service } %>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
</div>