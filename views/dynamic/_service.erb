<div class="service-item" data-category="<%= service.service_category.name.downcase %>">
    <div class="service-header d-flex justify-content-between align-items-start flex-column flex-md-row mb-2">
        <h4 class="service-name fs-5 fs-md-4 mb-1 mb-md-0"><%= service.name %></h4>
        <div class="service-price fw-bold text-primary fs-6 fs-md-5"><%= number_to_currency(service.price, unit: '₽', format: '%n %u') %></div>
    </div>
    
    <% if service.description.present? %>
        <p class="service-description text-muted mb-2 fs-6"><%= service.description %></p>
    <% end %>
    
    <div class="service-footer d-flex flex-wrap justify-content-between align-items-center mt-2 pt-2 border-top">
        <% if service.duration_minutes %>
            <span class="service-duration text-muted fs-6 mb-1">
                <i class="bi bi-clock me-1"></i><%= service.duration_minutes %> мин.
            </span>
        <% end %>
        <span class="service-category-tag badge bg-light text-dark fs-6">
            <%= service.service_category.name %>
        </span>
    </div>
</div>