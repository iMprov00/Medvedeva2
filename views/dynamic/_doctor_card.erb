<!-- views/dynamic/_doctor_card.erb -->
<% 
  # Получаем индекс врача
  doctor_index = defined?(index) ? index : 0
  bg_class = "bg-doctor-#{doctor_index % 2}"
%>

<div class="card doctor-card shadow-sm border-0 h-100" data-doctor-index="<%= doctor_index %>">
    <div class="position-relative doctor-photo-container <%= bg_class %> overflow-hidden">
        <div class="doctor-photo-wrapper" style="
            height: 300px;
            display: flex;
            align-items: flex-end;
            justify-content: center;
            position: relative;
        ">
            <% if doctor.photo_path && !doctor.photo_path.empty? %>
                <!-- Фоновый цвет -->
                <div class="position-absolute top-0 left-0 w-100 h-100 <%= bg_class %>"></div>
                
                <!-- Маска для скругления краев фото -->
                <div style="
                    position: relative;
                    width: 280px;
                    height: 280px;
                    margin-bottom: -20px;
                    overflow: hidden;
                    border-radius: 20px 20px 0 0;
                ">
                    <img src="<%= doctor.photo_path %>" 
                         class="position-absolute top-0 left-0 w-100 h-100" 
                         alt="Доктор <%= doctor.full_name %>"
                         style="
                             object-fit: cover;
                             object-position: center top;
                         ">
                </div>
            <% else %>
                <i class="bi bi-person-circle display-1 text-white position-absolute"
                   style="top: 50%; left: 50%; transform: translate(-50%, -50%);"></i>
            <% end %>
        </div>
        
        <% if doctor.experience_years && doctor.experience_years > 0 %>
            <span class="position-absolute top-0 end-0 m-3 badge bg-white text-primary rounded-pill shadow-sm">
                Опыт <%= doctor.experience_text %>
            </span>
        <% end %>
    </div>
    
    <div class="card-body d-flex flex-column">
        <h5 class="card-title fw-bold mb-2"><%= doctor.full_name %></h5>
        
        <div class="mb-3">
            <% if doctor.specialties.any? %>
                <% doctor.specialties.each do |specialty| %>
                    <span class="badge bg-secondary-light text-primary mb-2 me-1">
                        <%= specialty.name %>
                    </span>
                <% end %>
            <% else %>
                <span class="badge bg-secondary-light text-primary mb-2">
                    Специалист
                </span>
            <% end %>
        </div>
        
        <p class="card-text text-muted flex-grow-1 mb-4">
            <%= doctor.bio.to_s.truncate(120) %>
        </p>
        
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <a href="#" 
                   class="btn btn-primary btn-sm btn-appointment" 
                   data-doctor-id="<%= doctor.id %>" 
                   data-doctor-name="<%= doctor.full_name %>">
                  <i class="bi bi-calendar-check me-1"></i>Запись
                </a>
            </div>
        </div>
    </div>
</div>