<!-- views/dynamic/_doctor_card.erb -->
<% 
  # Получаем индекс врача из локальной переменной или генерируем
  doctor_index = defined?(index) ? index : 0
  bg_color = doctor_bg_color(doctor_index)
  bg_class = doctor_bg_class(doctor_index)
%>

<div class="card doctor-card shadow-sm border-0 h-100">
    <div class="position-relative doctor-photo-container <%= bg_class %>">
        <% if doctor.photo_present? && doctor.png_photo? %>
            <!-- Для PNG с прозрачным фоном -->
            <div class="doctor-photo-wrapper" style="height: 280px; background-color: <%= bg_color %>;">
                <img src="<%= doctor.photo_url %>" 
                     class="doctor-photo" 
                     alt="Доктор <%= doctor.full_name %>"
                     style="max-height: 100%; max-width: 100%; object-fit: contain;">
            </div>
        <% elsif doctor.photo_present? %>
            <!-- Для других форматов изображений -->
            <div class="doctor-photo-wrapper" style="height: 280px; background-color: <%= bg_color %>;">
                <img src="<%= doctor.photo_url %>" 
                     class="doctor-photo" 
                     alt="Доктор <%= doctor.full_name %>"
                     style="height: 100%; width: 100%; object-fit: cover;">
            </div>
        <% else %>
            <!-- Заглушка если фото нет -->
            <div class="card-img-top d-flex align-items-center justify-content-center <%= bg_class %>" 
                 style="height: 280px;">
                <i class="bi bi-person-circle display-1 text-white"></i>
            </div>
        <% end %>
        
        <% if doctor.experience_years && doctor.experience_years > 0 %>
            <span class="position-absolute top-0 end-0 m-3 badge bg-white text-primary rounded-pill shadow-sm">
                Опыт <%= doctor.experience_text %>
            </span>
        <% end %>
    </div>
    
    <div class="card-body d-flex flex-column">
        <h5 class="card-title fw-bold mb-2"><%= doctor.full_name %></h5>
        
        <div class="mb-3">
            <% if doctor.specialties.any? %>
                <% doctor.specialties.each do |specialty| %>
                    <span class="badge bg-secondary-light text-primary mb-2 me-1">
                        <%= specialty.name %>
                    </span>
                <% end %>
            <% else %>
                <span class="badge bg-secondary-light text-primary mb-2">
                    Специалист
                </span>
            <% end %>
        </div>
        
        <p class="card-text text-muted flex-grow-1 mb-4">
            <%= doctor.bio.to_s.truncate(120) %>
        </p>
        
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <a href="#" 
                   class="btn btn-primary btn-sm btn-appointment" 
                   data-doctor-id="<%= doctor.id %>" 
                   data-doctor-name="<%= doctor.full_name %>">
                  <i class="bi bi-calendar-check me-1"></i>Запись
                </a>
            </div>
        </div>
    </div>
</div>