
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">Управление специальностями</h1>
            </div>
            
            <!-- Форма добавления специальности -->
            <div class="card mb-5">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-tag me-2"></i>Добавить новую специальность</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/specialties" method="post" class="row g-3">
                        <div class="col-md-10">
                            <label for="specialty_name" class="form-label">Название специальности *</label>
                            <input type="text" class="form-control" id="specialty_name" name="name" 
                                   placeholder="Терапевт, Кардиолог, Невролог и т.д." required>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle me-2"></i>Добавить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Список специальностей -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-tags me-2"></i>Список специальностей (<%= @specialties.count %>)</h5>
                </div>
                <div class="card-body">
                    <% if @specialties.empty? %>
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            Специальности не добавлены. Добавьте первую специальность, чтобы начать.
                        </div>
                    <% else %>
                        <div class="row">
                            <% @specialties.each do |specialty| %>
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card specialty-item">
                                        <div class="card-body d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="card-title mb-1"><%= specialty.name %></h6>
                                            <p class="card-text small text-muted mb-0">
                                                <i class="bi bi-people me-1"></i>
                                                <% doctor_count = specialty.doctors.count %>
                                                <%= doctor_count %> <%= russian_plural(doctor_count, 'врач', 'врача', 'врачей') %>
                                            </p>
                                            </div>
                                            <div>
                                                <form action="/admin/specialties/<%= specialty.id %>/delete" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger btn-sm" 
                                                            <%= 'disabled' if specialty.doctors.any? %>
                                                            title="<%= specialty.doctors.any? ? 'Нельзя удалить: есть врачи с этой специальностью' : 'Удалить' %>">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Подтверждение удаления
        document.addEventListener('DOMContentLoaded', function() {
            const deleteForms = document.querySelectorAll('form[action*="/delete"]');
            deleteForms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    if (!confirm('Вы уверены, что хотите удалить эту специальность?')) {
                        e.preventDefault();
                    }
                });
            });
            
            // Фокус на поле ввода при загрузке
            const specialtyInput = document.getElementById('specialty_name');
            if (specialtyInput) {
                specialtyInput.focus();
            }
        });
    </script>
